<div class="my-4">
    <h1 class="title">Upload a new course</h1>
</div>

<%= notice %>

<%= form_with(model: @course, method: :post) do |form| %>

    <div>
        <%= form.label :Name, class:"label" %>
        <div class="control">
            <%= form.text_field :name, class:"input" %>
        </div>
    </div>

    <div class="mt-3">
        <%= form.label :Description, class:"label" %>
        <div class="control">
            <%= form.text_area :description, class:"textarea", placeholder:"10 lines of textarea", rows:"10"%>
        </div>
    </div>

    <div class="block">
        <%= form.label :Category, class:"label" %>
        <div class="control">
            <%= form.text_field :category, class:"input" %>
        </div>
    </div>

    <div>
        <%= form.text_field :instructor, value: current_user.id, hidden: true %>
    </div>

    <div class="md-2">
        <%= form.submit 'Create course', class:"button is-rounded is-dark is-dark" %>
    </div>

<% end %>
<div class="mt-2">
    <%= link_to 'Go back', root_path, class:"button is-rounded is-dark is-dark" %>
</div>