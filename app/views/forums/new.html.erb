<div class="my-2">
    <p class="title">New Forum</p>
</div>

<%= notice %>

<%= form_with(model: @forum, method: :post, url: course_forums_path(:course_id => @forum.course_id)) do |form| %>

    <div class="mt-3">
        <%= form.label :Name, class:"label" %>
        <div class="control">
            <%= form.text_field :name, class:"input" %>
        </div>
    </div>
    <div class>
        <%= form.text_field :course_id, value: @forum.course_id, hidden: true %>
    </div>
    <div class="mt-2">
        <%= form.submit 'Create new forum', class:"button" %>
    </div>
    <div>
    <%= link_to 'Go back', course_forums_path(:course_id => @forum.course_id) %><br>
    </div>
<% end %>
