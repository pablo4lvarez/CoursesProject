<div class="my-2">
    <p class="title">Class edit</p>
</div>

<%= notice %>

<%= form_with(model: @clase, method: :patch, url: course_clase_path(:course_id => @clase.course_id, :id => @clase.id)) do |form| %>

    <div>
        <%= form.label :Number, class:"label" %>
        <div class="control">
            <%= form.text_field :numero, class:"input" %>
        </div>
    </div>
    <div class="mt-3">
        <%= form.label :Name, class:"label" %>
        <div class="control">    
            <%= form.text_field :nombre, class:"input" %>
        </div>
    </div>
    <div class="mt-3">
        <%= form.label :Content, class:"label" %>
        <div class="control">
            <%= form.text_area :contenido, class:"textarea" %>
        </div>
    </div>
    <div class="mt-4">
        <%= form.submit 'Edit class', class:"button" %>
    </div>
<% end %>
