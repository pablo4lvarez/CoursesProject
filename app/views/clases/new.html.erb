<%= notice %>

<%= form_with(model: @clase, method: :post, url: course_clases_path(:course_id => @clase.course_id)) do |form| %>

    <div class="mt-2">
        <%= form.label :Number, class:"label" %>
        <div class="control">
            <%= form.number_field :numero, class:"input" %>
        </div>
    </div>
    <div class="mt-3">
        <%= form.label :Name, class:"label" %>
        <div class="control">
            <%= form.text_field :nombre, class:"input" %>
        </div>
    </div>
    <div class="mt-3">
        <%= form.label :Content, class:"label" %>
        <div class="control">
            <%= form.text_area :contenido, class:"textarea", rows:"10", placeholder:"Insert youtube link to upload a video" %>
        </div>
    </div>
    <div>
        <%= form.text_field :course_id, value: @clase.course_id, hidden: true %>
    </div>
    <div class="my-2">
        <%= form.submit 'Create new class', class:"button" %>
    </div>
    <div>
    <%= link_to 'Go back', course_path(:id => @clase.course_id) %><br>
    </div>
<% end %>
